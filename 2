        <script>
        
            function iniciaModal(modalID, Classe) {
                    const modal = document.getElementById(modalID);
                    var r=Classe.id;
                    console.log(Classe.id);
                    if(modal) {
                        var mudar=document.querySelector('#IdInterno');
                            console.log(mudar);
                            mudar.setAttribute("id",r);
                            console.log(mudar);
                        modal.classList.add('mostrar');
                       
                        modal.addEventListener('click', (e) => {
                            
                            if(e.target.id == modalID || e.target.className == 'fechar') {
                                modal.classList.remove('mostrar');
                            }
                        });
                    }
                
            }
    
            const s1 = document.querySelector('.teste');
            s1.addEventListener('click', () => iniciaModal('modal-promocao',s1));
            const s2 = document.querySelector('.teste1');
            s2.addEventListener('click', () => iniciaModal('modal-promocao',s2));
            

           function Verificar(obj){
               console.log("Nova função");
               console.log(obj.id);
               var id=obj.id;
            if (id=='1'){
                console.log("chama a 1");
            }else if (id=='2') {
                console.log("chama a 2")
            } else {
                console.log("chama a 3")
            }   
            }
       
    
        </script>
          
